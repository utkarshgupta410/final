<div class="row">
    <div class="col-sm-9">
        <h1>
            <i class="fas fa-<%= @listing[:buildtype].downcase%>"></i>
            <%= @listing[:title] %>
        </h1>
        <p> Building Type: <%= @listing[:buildtype] %></p>
        <p> Average Rent: $<%= @listing[:avgrent] %></p>
        <p> Number of Rooms: <%= @listing[:rooms] %></p>
        
        <br> </br>
        
        <h2> Reviews: </h2>

        <% ratingcount = 0 %>
        <% ratingsum = 0 %>

        <% for count in @review %>
            <% ratingsum = count[:rating] + ratingsum %>
            <% ratingcount = ratingcount + 1 %>
        <% end %>

        <% puts ratingsum %>
        <% puts ratingcount %>
        
        <p> Average Rating: <%= ratingsum/ratingcount %>
        
        <% for count in @review %>
            <div class="media">
                <% if count[:rating] = 1, 2 %>
                    <i class="far fa-frown-open"></i>
                <% elseif count[:rating] = 3 %>
                    <i class="far fa-frown-open"></i>
                <% elseif count[:rating] = 4, 5 %>
                    <i class="far fa-frown-open"></i>
                <% else %>
                    <i class="far fa-frown-open"></i>
                <% end %>
                <h5 class="mt-0"><%= @users_table.where(id: count[:user_id]).to_a[0][:name] %></h5>
                <%= count[:comments] %>
            </div>
        </div>
        <% end %>
               
        <p class="mt-5">
            <% if @current_user %>
                <a href="/listings/<%= @listing[:id] %>/reviews/new" class="btn btn-primary">Leave a Review!</a>
            <% else %>
                <a href="/logins/new" class="btn btn-danger">Please sign in to review</a>
            <% end %>
        </p>


    </div>
    <div class="col-sm-3">
        <h3>When?</h3>
        <p><%= @listing[:title] %></p>
        <h3>Where?</h3>
        <p><%= @listing[:location] %></p>
        <!-- <h3>How many guests so far?</h3>
        <p><%= @going_count %></p> -->
    </div>
</div>